<h1>Cadastro Entrada</h1>

<form method=" post" action="/Entrada/Cadastrar">
    <div class="mb-3">
        <label for="descricao" class="form-label">Descrição</label>
        <input type="text" class="form-control" id="descricao" name="descricao" maxlength="50">
    </div>
    <div class="mb-3">
        <label for="DATAENTRADA" class="form-label">Data de entrada</label>
        <input type="datetime" class="form-control" id="DATAENTRADA" name="DATAENTRADA" maxlength="10">
    </div>
    <div class="mb-3 ">
        <label class="form-label" for="QUANTIDADEATUAL">Quantidade atual</label>
        <input type="number" class="form-input" id="QUANTIDADEATUAL" name="QUANTIDADEATUAL" maxlength="1000">
    </div>

    <button class="btn btn-primary"> Voltar</button>
    <button type="submit" class="btn btn-primary"> Salvar</button>
    
</form>