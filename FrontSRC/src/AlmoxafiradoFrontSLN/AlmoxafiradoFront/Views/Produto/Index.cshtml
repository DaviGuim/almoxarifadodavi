<div id="container" class="containerProduto">
    <div class="container1Produto">
        <div>
            <a class="btn btn-success" href="/Produto/Create"> Novo</a>
            <a class="btn btn-primary" href="https://localhost:7215/"> Voltar</a>
        </div>
    </div>
    <div class="container2Produto">
        <table class="TableContainerProduto">
            <thead class="theadProduto">
                <tr>
                    <th>Código</th>
                    <th>Descrição</th>
                    <th>UnidadeMedida</th>
                    <th>EstoqueAtual</th>
                    <th>Epermanente</th>
                    <th>CódigoCategoria</th>
                </tr>
            </thead>
            <tbody>

                @{
                    var produtos = ViewBag.Produtos as List<AlmoxafiradoFront.DTO.ProdutosDTO>;
                }

                @if (ViewBag.Produtos != null)
                {
                    foreach (var item in ViewBag.Produtos)
                    {
                        <tr>
                            <td class="tdProduto">@item.Codigo</td>
                            <td class="tdProduto">@item.Descricao</td>
                            <td class="tdProduto">@item.UnMedida</td>
                            <td class="tdProduto">@item.EstoqueAtual</td>
                            <td class="tdProduto">@item.EPermanente</td>
                            <td class="tdProduto">@item.CodigoCategoria</td>
                        </tr>
                    }
                }
                
                    
                
                
            </tbody>


        </table>
    </div>
    <div class="container3Produto">
        <div>
           
        </div>
    </div>
</div>

